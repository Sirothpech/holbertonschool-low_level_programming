CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) *$(OBJ)

fclean:
	$(RM) *~ *.$(OBJ) $(NAME)

re: $(OBJ)
	$(RM) $(OBJ)
	$(CC) -c -o $(OBJ) $(SRC)
	$(CC) -c -o $(OBJ) $(SRC)
	$(CC) $(OBJ) -o $(NAME)
